<mvc:View controllerName="com.sap.btpdestinationsui.controller.Master"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table id="masterTable" items="{path: '/Employees'}" class="sapUiMediumMarginTop">
                <columns>
                    <Column >
                        <Text text="Name"></Text>
                    </Column>

                </columns>
                <items>
                    <ColumnListItem >
                        <Input value="{name}" editable="false"></Input>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
